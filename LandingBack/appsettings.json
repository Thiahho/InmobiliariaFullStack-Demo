{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "https://localhost:3000",
    "http://localhost:3001",
    "https://localhost:3001",
    "http://localhost:3002",
    "https://localhost:3002"
  ],
  "Jwt": {
    "Key": "YourSecretKeyHere-ChangeInProduction-MustBe32CharsMinimum",
    "Issuer": "InmobiliariaApp",
    "Audience": "InmobiliariaApp",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Console"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": "587",
    "FromName": "Inmobiliaria - Sistema de Visitas",
    "FromAddress": "your-email@gmail.com",
    "Username": "your-email@gmail.com",
    "Password": "your-gmail-app-password"
  },
  "AllowedHosts": "*"
}
